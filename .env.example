# Database Configuration
# Replace with your PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/pictallion

# Server Configuration
PORT=5000
NODE_ENV=development
HOST=0.0.0.0

# AI Provider Configuration
# Options: ollama, openai, both
AI_PROVIDER=ollama

# Ollama Configuration (for local AI processing)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llava:latest
OLLAMA_TEXT_MODEL=llama3.2:latest

# OpenAI Configuration (for cloud AI processing)
# Get your API key from https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Session Configuration (optional - defaults will be used if not set)
SESSION_SECRET=your_session_secret_here

# File Upload Configuration (optional)
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Logging Configuration (optional)
LOG_LEVEL=info